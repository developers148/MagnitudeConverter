<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#D6D4D5"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/titlemarginstart_8dp"
            android:layout_marginTop="@dimen/textviewmargintop_20dp"
            android:layout_marginBottom="@dimen/titlemarginbottom_4dp"
            android:textSize="@dimen/titletextsize_20sp"
            android:text="@string/categories"
            android:layout_marginStart="70dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight=".05" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/relativelayoutheight_100dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/textviewmargintop_20dp"
                    android:layout_marginBottom="@dimen/textviewmarginbottom_2dp"
                    android:background="@drawable/textviewborderxtralange"
                    android:gravity="center"
                    android:text="@string/currency"
                    android:textColor="#707070"
                    android:textSize="40sp" />

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_alignTop="@+id/text"
                    android:layout_alignBottom="@+id/text"
                    android:layout_marginTop="@dimen/imageviewmargintop_20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/imageviewmarginbottom_56dp"
                    android:src="@drawable/currency"
                    android:contentDescription="@string/currency" />
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight=".05" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/relativelayoutheight_100dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/textviewmargintop_20dp"
                    android:layout_marginBottom="@dimen/textviewmarginbottom_2dp"
                    android:background="@drawable/textviewborderxtralange"
                    android:gravity="center"
                    android:text="@string/length"
                    android:textColor="#707070"
                    android:textSize="40sp" />

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_alignTop="@+id/text1"
                    android:layout_alignBottom="@+id/text1"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/imageviewmargintop_20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/imageviewmarginbottom_56dp"
                    android:src="@drawable/length"
                    android:contentDescription="@string/length" />
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight=".05" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.05" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/relativelayoutheight_100dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"


                    android:layout_marginTop="@dimen/textviewmargintop_20dp"


                    android:layout_marginBottom="@dimen/textviewmarginbottom_2dp"
                    android:background="@drawable/textviewborderxtralange"
                    android:gravity="center"
                    android:text="@string/number"
                    android:textColor="#707070"
                    android:textSize="40sp" />

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"


                    android:layout_alignTop="@+id/text2"

                    android:layout_alignBottom="@+id/text2"


                    android:layout_marginTop="@dimen/imageviewmargintop_20dp"
                    android:layout_centerHorizontal="true"

                    android:layout_marginBottom="@dimen/imageviewmarginbottom_56dp"
                    android:src="@drawable/number"
                    android:contentDescription="@string/number" />
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.05" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/relativelayoutheight_100dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"


                    android:layout_marginTop="@dimen/textviewmargintop_20dp"

                    android:layout_marginBottom="@dimen/textviewmarginbottom_2dp"
                    android:background="@drawable/textviewborderxtralange"
                    android:gravity="center"
                    android:text="@string/word"
                    android:textColor="#707070"
                    android:textSize="40sp" />

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"

                    android:layout_alignTop="@+id/text3"

                    android:layout_alignBottom="@+id/text3"
                    android:layout_gravity="center"

                    android:layout_marginTop="@dimen/imageviewmargintop_20dp"
                    android:layout_centerHorizontal="true"

                    android:layout_marginBottom="@dimen/imageviewmarginbottom_56dp"
                    android:src="@drawable/numbertoword"
                    android:contentDescription="@string/word" />
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.05" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.05" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/relativelayoutheight_100dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"

                    android:layout_marginTop="@dimen/textviewmargintop_20dp"

                    android:layout_marginBottom="@dimen/textviewmarginbottom_2dp"
                    android:background="@drawable/textviewborderxtralange"
                    android:gravity="center"
                    android:text="@string/pressure"
                    android:textColor="#707070"
                    android:textSize="40sp" />

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"

                    android:layout_alignTop="@+id/text4"

                    android:layout_alignBottom="@+id/text4"
                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="@dimen/imageviewmargintop_20dp"

                    android:layout_marginBottom="@dimen/imageviewmarginbottom_56dp"
                    android:src="@drawable/pressure"
                    android:contentDescription="@string/pressure" />
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.05" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/relativelayoutheight_100dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/textviewmargintop_20dp"

                    android:layout_marginBottom="@dimen/textviewmarginbottom_2dp"
                    android:background="@drawable/textviewborderxtralange"
                    android:gravity="center"
                    android:text="@string/temparature"
                    android:textColor="#707070"
                    android:textSize="40sp" />

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"

                    android:layout_alignTop="@+id/text5"

                    android:layout_alignBottom="@+id/text5"
                    android:layout_gravity="center"

                    android:layout_marginTop="@dimen/imageviewmargintop_20dp"
                    android:layout_centerHorizontal="true"

                    android:layout_marginBottom="@dimen/imageviewmarginbottom_56dp"
                    android:src="@drawable/temparature"
                    android:contentDescription="@string/temparature" />
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.05" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.05" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/relativelayoutheight_100dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"

                    android:layout_marginTop="@dimen/textviewmargintop_20dp"

                    android:layout_marginBottom="@dimen/textviewmarginbottom_2dp"
                    android:background="@drawable/textviewborderxtralange"
                    android:gravity="center"
                    android:text="@string/time"
                    android:textColor="#707070"
                    android:textSize="40sp" />

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"

                    android:layout_alignTop="@+id/text6"

                    android:layout_alignBottom="@+id/text6"
                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="@dimen/imageviewmargintop_20dp"

                    android:layout_marginBottom="@dimen/imageviewmarginbottom_56dp"
                    android:src="@drawable/time"
                    android:contentDescription="@string/time" />
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.05" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/relativelayoutheight_100dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/text7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"

                    android:layout_marginTop="@dimen/textviewmargintop_20dp"

                    android:layout_marginBottom="@dimen/textviewmarginbottom_2dp"
                    android:background="@drawable/textviewborderxtralange"
                    android:gravity="center"
                    android:text="@string/weight"
                    android:textColor="#707070"
                    android:textSize="40sp" />

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"

                    android:layout_alignTop="@+id/text7"

                    android:layout_alignBottom="@+id/text7"
                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="@dimen/imageviewmargintop_20dp"

                    android:layout_marginBottom="@dimen/imageviewmarginbottom_56dp"
                    android:src="@drawable/weight"
                    android:contentDescription="@string/weight" />
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.05" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>